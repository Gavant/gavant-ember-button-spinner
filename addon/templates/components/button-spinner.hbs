<div class="fixed-width" style={{style}}>
    {{#if isSpinning}}
        <span class="{{loadingClass}} active"></span>
    {{else if successShown}}
        <div class="success loading-btn-flip-in">
            {{fa-icon successIcon class="action-button-icon"}}
        </div>
    {{else}}
        {{#if hasIcon}}
            {{fa-icon icon class="action-button-icon"}}
        {{/if}}
        {{#if (not iconBtn)}}
            {{#if label}}
                <span class="action-button-lbl">{{label}}</span>
            {{/if}}
            {{yield}}
        {{/if}}
        {{#if tooltip}}
            {{#attach-tooltip
                animation=tooltip-animation
                arrow=tooltip-arrow
                hideOn=tooltip-hide-on
                registerAPI=(action "onTooltipApiChange")
            }}
                {{tooltip}}
            {{/attach-tooltip}}
        {{/if}}
    {{/if}}
</div>
